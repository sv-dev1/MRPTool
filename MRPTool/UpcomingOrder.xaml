<Window x:Class="MRPTool.UpcomingOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Upcoming Order"
        Height="300"
        Topmost="True"
        Width="500" 
        ResizeMode="NoResize"
        Icon="favicon.ico"
        Background="#008080" 
        WindowStartupLocation="CenterScreen" 
        ShowInTaskbar="False">
    <Grid>
        <StackPanel Orientation="Vertical" >
            <TextBlock Text="Upcoming order calculation in days" HorizontalAlignment="Center" FontSize="20" Margin="0 20 0 0">
                
            </TextBlock>
            <TextBox HorizontalAlignment="Center" Name="ResponseTextBox" MaxLength="5" Width="200" FontSize="20" Margin="0 20 0 0" PreviewTextInput="ResponseTextBox_PreviewTextInput"></TextBox>

            <Button Grid.Row="3" 
                Content="Ok" 
                Height="40" 
                Width="100" 
                    HorizontalAlignment="Center"
                    Margin="20 20 0 0"
                   Click="StockOrders_Click"
                Name="StockOrders" 
               ></Button>

        </StackPanel>
    </Grid>
</Window>
